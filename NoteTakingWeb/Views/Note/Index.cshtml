@model IEnumerable<NoteTaking.Services.Models.NoteVM>

@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-2 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Notes</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Note" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create a New Note
            </a>
        </div>
    </div>
    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Note</th>
                <th>Created Time</th>
                <th>Updated Time</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
@section Scripts{
    <script src="~/js/note.js"></script>
}